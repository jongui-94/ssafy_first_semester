<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_login_needlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구글 로그인이 필요합니다."
        android:textSize="24sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@id/tv_login_needlogin"
        app:layout_constraintEnd_toEndOf="@id/tv_login_needlogin"
        app:layout_constraintStart_toStartOf="@id/tv_login_needlogin"
        android:backgroundTint="@color/purple_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>